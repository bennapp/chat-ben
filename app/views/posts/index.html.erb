<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<p>
  Welcome to Convo!
</br>
  Convo is a place to have a convesation about a topic below
</br>
  Convo is not a place to be nude
</p>

</br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.name %></td>
        <% if current_user == post.user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>

</br>
</br>

<% if current_user %>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
    <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
        <div class="field">
          <%= f.label :login, 'Name or Email' %><br />
          <%= f.text_field :login %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if Devise.mappings[:user] %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>

        <%= link_to "Sign up", new_registration_path(:user) %>
    <% end %>
<% end  %>
