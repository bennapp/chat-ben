<div class="page-header">
  <h1 class="page-title">Convo <small class="lead"><%= @room.post.title %></small></h1>
</div>

<div class="room-page">
  <div class="left-panel">
    <div class="alert alert-info status" role="alert"></div>

    <div class="videoContainer">
      <video id="localVideo" style="height: 150px;" oncontextmenu="return false;"></video>
      <div id="localVolume" class="volume_bar"></div>
    </div>

    <div class="buttons">
      <button id="end-conversation" class="btn btn-danger">End Conversation</button>
      <div class="new-buttons">
        <%= link_to "New Conversation About the Same Topic", @room.post, id: 'new-conversation', class: 'btn' %>
        </br >
        <%= link_to "List of Topics", root_path, id: 'new-topic', class: 'btn' %>
      </div>
    </div>

    <div class="rating">
      <h4 id="rate-other-user">Rate your conversation</h4>
      <%= form_for(@rating, remote: true) do |f| %>
        <%= f.hidden_field :room_id, value: @room.id %>

        <div>
          <%= f.check_box :nsfw %>
          <%= f.label :nsfw, "Report for nudity" %>
        </div>

        <div class="rating-select-container">
          <span class="caret"></span>
          <% select_options = options_for_select([["★", 1], ["★★", 2], ["★★★", 3], ["★★★★", 4], ["★★★★★", 5]], ["★★★", 3]) %>
          <%= f.select :value, select_options %>
        </div>

        <%= f.submit "Submit Rating", class: 'submit-rating btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div class="remote-panel">
    <div class="remote-container">
      <div id="toggle-local" class="toggle" aria-label="Left Align">
        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
      </div>

      <div id="remote"></div>

      <div id="toggle-chat" class="toggle" aria-label="Left Align">
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
      </div>
    </div>
  </div>

  <div class="chat-panel">
    <div class="messages-container">
      <div class="from well well-sm bg-info">Hey how is it going</div>
      <div class="to well well-sm">It is going well thank you!</div>
    </div>
    <div class="send-container">
      <textarea class='form-control' id="send-message" placeholder="Type a message, press enter to send"></textarea>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    var roomShow = new RoomShow({ room: '<%= @room.token %>', participationId: '<%= @participation_id %>', nick: '<%= current_user.name %>' });
  });
</script>
