<div class='form-container'>
  <h2>Log in</h2>

  <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
    <div class="login-field">
      <%= f.label :login, 'Username or Email' %></br>
      <%= f.text_field :login, class: 'login-input' %>
    </div>

    <div class="login-field">
      <%= f.label :password %></br>
      <%= f.password_field :password, autocomplete: "off", class: 'login-input' %>
    </div>

    <% if Devise.mappings[:user] %>
        <div class="login-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-info' %>
      <%= link_to "Sign up", new_registration_path(:user), class: 'btn btn-success' %></br>
      <%= link_to "Forgot your password?", new_password_path(:user) %>
    </div>
  <% end %>
</div>


<script>
  $('.login-input:first').focus();
</script>
